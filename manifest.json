{
  "manifest_version": 3,
  "name": "YouTube to Piped Link Converter",
  "version": "1.0",
  "description": "Converts YouTube links to piped links",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://www.youtube.com/*"
  ]
}


